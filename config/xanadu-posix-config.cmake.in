# Explain
message("using ${PROJECT_NAME}-config.cmake find")

# Find XANADU_POSIX_INCLUDE
find_path(XANADU_POSIX_INCLUDE ${PROJECT_NAME}/ HINTS ${CMAKE_INSTALL_PREFIX}/include/)

# Find XANADU_POSIX_LIBRARY
if (WIN32)
	find_path(XANADU_POSIX_LIBRARY ${PROJECT_NAME}.lib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (MINGW)
	find_path(XANADU_POSIX_LIBRARY ${PROJECT_NAME}.dll.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (APPLE)
	find_path(XANADU_POSIX_LIBRARY lib${PROJECT_NAME}.dylib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_POSIX_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (UNIX)
	find_path(XANADU_POSIX_LIBRARY lib${PROJECT_NAME}.so HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_POSIX_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
endif ()

# Setting
if(XANADU_POSIX_INCLUDE AND XANADU_POSIX_LIBRARY)
	set(XANADU_POSIX_FOUND TRUE)
	set(${PROJECT_NAME}_DIR ${CMAKE_INSTALL_PREFIX}/include)
	set(${PROJECT_NAME}_LIB ${CMAKE_INSTALL_PREFIX}/lib)
	add_definitions(-D${XANADU_POSIX_BUILD_REPLACE})
endif()
